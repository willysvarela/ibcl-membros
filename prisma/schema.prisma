generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
    id String @id @default(cuid())
    phone String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name String
    department String
    fatherName String @default("")
    motherName String @default("")
    fathersPhone String
    birthDate DateTime
    photo String @default("")
    familyPhoto String
    address String @default("")
    active Boolean @default(true)
    membershipType String @default("Visitante") // Batizado, Aclamado, Carta, Visitante
    civilStatus String @default("Solteiro") // Solteiro, Viuvo, Casado, Divorciado
    engagementDate DateTime? // Optional date field
    group String @default("") // GCO or GA group
    ministries String @default("") // Ministries the user is part of
    MinistryUser MinistryUser[]
}

model Ministry {
    id String @id @default(cuid())
    name String
    description String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    MinistryUser MinistryUser[]
}

model MinistryUser {
    id String @id @default(cuid())
    ministryId String
    ministry Ministry @relation(fields: [ministryId], references: [id])
    userId String
    user User @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    active Boolean @default(true)
    updatedAt DateTime @updatedAt
}
